{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["./node_modules/@types", "./"]
  },
  "include": [
    "features/**/*.ts",
    "step_definitions/**/*.ts",
    "support/**/*.ts"
  ],
  "files": [
    "testomatio-reporter.d.ts"
  ]
}
